<!DOCTYPE html>
<html>
  <head>
    <title>FlowOverstack</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="icon" type="image/png" href="http://www.icons101.com/icon_ico/id_82693/OneDrive.ico">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar navbar-dark bg-dark">
      <div class="container">
        <div class="col-md-6 col-md-offset-3">
          <%= link_to "FlowOverstack", root_path, class: "navbar-brand" %>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav navbar-right">
            <% if logged_in? %>
              <li class="nav-item">
                <%= link_to "Salir", logout_path, method: :delete, class:"nav-link" %>
              </li>
            <% else %>
              <li><%= link_to "RegÃ­strate", new_user_path, class:"nav-link" %></li>
              <li><%= link_to "Ingresar", login_path, class:"nav-link" %></li>
            <% end %>
          </ul>
          <form class="form-inline my-2 my-lg-0" role="search">
            <input type="text" class="form-control mr-sm-2" placeholder="Buscar">
          </form>
        </div>
      </div>
    </nav>

    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>

    </div>
  </body>
</html>
